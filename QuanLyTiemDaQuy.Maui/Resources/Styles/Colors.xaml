<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    
    <!-- ============================================ -->
    <!-- LIGHT THEME COLORS (AppTheme.Light) -->
    <!-- ============================================ -->
    
    <!-- Primary Brand Colors -->
    <Color x:Key="Primary">#512BD4</Color>
    <Color x:Key="PrimaryDark">#381E72</Color>
    <Color x:Key="PrimaryLight">#7B5CD6</Color>
    <Color x:Key="PrimaryDarkText">White</Color>
    <Color x:Key="Secondary">#625B71</Color>
    <Color x:Key="SecondaryDark">#4A4458</Color>
    <Color x:Key="Tertiary">#7D5260</Color>
    
    <!-- Status Colors -->
    <Color x:Key="Success">#2E7D32</Color>
    <Color x:Key="Warning">#ED6C02</Color>
    <Color x:Key="Error">#D32F2F</Color>
    <Color x:Key="Info">#0288D1</Color>
    
    <!-- Gemstone Theme Colors -->
    <Color x:Key="Diamond">#B9F2FF</Color>
    <Color x:Key="Ruby">#E0115F</Color>
    <Color x:Key="Emerald">#50C878</Color>
    <Color x:Key="Sapphire">#0F52BA</Color>
    
    <!-- Light Mode - High Contrast Backgrounds -->
    <Color x:Key="PageBackground">#F5F5F5</Color>
    <Color x:Key="CardBackground">#FFFFFF</Color>
    <Color x:Key="SurfaceBackground">#FAFAFA</Color>
    <Color x:Key="HeaderBackground">#512BD4</Color>
    <Color x:Key="TabBarBackground">#FFFFFF</Color>
    <Color x:Key="TabBarBorder">#E0E0E0</Color>
    
    <!-- Light Mode - Text Colors (High Contrast) -->
    <Color x:Key="TextPrimary">#1A1A1A</Color>
    <Color x:Key="TextSecondary">#424242</Color>
    <Color x:Key="TextTertiary">#757575</Color>
    <Color x:Key="TextDisabled">#9E9E9E</Color>
    <Color x:Key="TextOnPrimary">#FFFFFF</Color>
    
    <!-- Gray Scale -->
    <Color x:Key="Gray50">#FAFAFA</Color>
    <Color x:Key="Gray100">#F5F5F5</Color>
    <Color x:Key="Gray200">#EEEEEE</Color>
    <Color x:Key="Gray300">#E0E0E0</Color>
    <Color x:Key="Gray400">#BDBDBD</Color>
    <Color x:Key="Gray500">#9E9E9E</Color>
    <Color x:Key="Gray600">#757575</Color>
    <Color x:Key="Gray700">#616161</Color>
    <Color x:Key="Gray800">#424242</Color>
    <Color x:Key="Gray900">#212121</Color>
    <Color x:Key="Gray950">#121212</Color>
    
    <!-- Basic Colors -->
    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">#000000</Color>
    
    <!-- ============================================ -->
    <!-- DARK THEME COLORS (AppTheme.Dark) -->
    <!-- ============================================ -->
    
    <Color x:Key="DarkPrimary">#BB86FC</Color>
    <Color x:Key="DarkPrimaryVariant">#3700B3</Color>
    <Color x:Key="DarkSecondary">#03DAC6</Color>
    <Color x:Key="DarkBackground">#121212</Color>
    <Color x:Key="DarkSurface">#1E1E1E</Color>
    <Color x:Key="DarkCardBackground">#2D2D2D</Color>
    <Color x:Key="DarkTextPrimary">#FFFFFF</Color>
    <Color x:Key="DarkTextSecondary">#B3B3B3</Color>
    <Color x:Key="DarkSuccess">#4CAF50</Color>
    <Color x:Key="DarkWarning">#FF9800</Color>
    <Color x:Key="DarkError">#F44336</Color>
    
    <!-- Accent Colors -->
    <Color x:Key="AccentYellow">#F7B548</Color>
    <Color x:Key="AccentCyan">#28C2D1</Color>
    <Color x:Key="AccentPink">#EC407A</Color>
    <Color x:Key="AccentTeal">#26A69A</Color>
    
</ResourceDictionary>
